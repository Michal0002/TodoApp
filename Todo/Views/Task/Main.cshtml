@model (int, List<Todo.Models.TaskModel>)

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3>Tasks for today: <a style="color:red">@Model.Item1</a> </h3>
                    </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Due Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model.Item2)
                            {
                                <tr>
                                    <td>@task.Title</td>
                                    <td>@task.Description</td>
                                    <td>@task.DueDate</td>
                                    <td>@task.Status</td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = @task.Id }, new { @class = "btn btn-info btn-sm" })
                                    </td>
                                </tr>
                            }
                            @if (!Model.Item2.Any())
                            {
                                <tr>
                                    <td colspan="4">
                                        <p class="text-center">No tasks for today. </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
